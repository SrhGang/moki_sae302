<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <link rel="shortcut icon" href="./assets/img/moki.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://api.fontshare.com/v2/css?f[]=clash-display@400,700,500,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://static2.sharepointonline.com/files/fabric/office-ui-fabric-core/9.6.1/css/fabric.min.css"> 
    <link rel="stylesheet" href="./assets/css/principal.css">
    <link rel="stylesheet" href="./assets/css/style.css">
    <title>Moki - Avatar</title>
</head>
<body>
    <div class="modal-chose-avatar">
        <div class="chose-avatar-profil">
            <section><h3>Choisi ton avatar</h3></section>
            <div class="list-avatar">
                <% avatars.forEach(function(avatar) { %>
                    <section class="avatar-profil" data-image="<%= avatar.id %>">
                      <img src="data:image/png;base64,<%= avatar.image.toString('base64') %>">
                    </section>
                <% }); %>                  
            </div>

            <section class="btn-valid-chose">
                <button class="btn-valid" id="btnValidAvatar" type="button">Valider</button>
            </section>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    let selectedAvatarId;
    let avatarProfil = document.querySelectorAll('.avatar-profil');

    function selectAvatar(avatarId) {
        avatarProfil.forEach((avatar) => {
            avatar.classList.remove('selectedAvatarId');
        });

        let selectedAvatar = document.querySelector(`.avatar-profil[data-image="${avatarId}"]`);
        selectedAvatar.classList.add('selectedAvatarId');

        selectedAvatarId = avatarId;
        console.log(selectedAvatarId);
    }

    avatarProfil.forEach((avatar) => {
        avatar.addEventListener('click', () => {
            let avatarId = avatar.getAttribute('data-image');
            selectAvatar(avatarId);
        });
    });

    $('#btnValidAvatar').click(function() {
        $.ajax({
            url: '/update-avatar',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ 
                avatarId: selectedAvatarId
            }),
            success: function(data) {
                if(data && data.status === 'success'){
                    console.log(data);
                    window.location.href = '/dashboard';
                }
            },
            error: function(error) {
                console.error('Error:', error);
            }
        });
    });    
</script>
    
</html>